<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.DesafioBetterfly" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cream</item>
        <item name="colorPrimaryVariant">@color/cream_dark</item>
        <item name="colorOnPrimary">@color/cream</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="actionOverflowButtonStyle">@style/ToolbarStyle.Overflow</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextAppearance</item>
<!--        <item name="android:itemBackground">@color/cream</item>-->
        <item name="popupMenuBackground">@color/cream</item>
    </style>
</resources>