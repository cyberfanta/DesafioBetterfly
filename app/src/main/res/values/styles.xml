<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Character Styles-->
    <style name="characterCardText">
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/cream_dark_2</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0dp</item>
    </style>
    <style name="characterCardNumber" parent="characterCardText">
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
    </style>
    <style name="characterCardView">
        <item name="android:background">@color/white_transparent_2</item>
    </style>
    <style name="characterCardViewNumber" parent="characterCardView">
        <item name="android:background">@drawable/card_view_number_background</item>
    </style>
    <style name="characterDetailLabel">
        <item name="android:background">@drawable/detail_label_background</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="characterDetailLabelTop">
        <item name="android:background">@drawable/detail_label_background_top</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="characterDetailLabelBottom">
        <item name="android:background">@drawable/detail_label_background_botton</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="characterDetail">
        <item name="android:background">@drawable/detail_background</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="characterDetailTop">
        <item name="android:background">@drawable/detail_background_top</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="characterDetailBottom">
        <item name="android:background">@drawable/detail_background_botton</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- Location Styles-->
    <style name="locationLabel">
        <item name="android:background">@drawable/location_label_background</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="locationData">
        <item name="android:background">@drawable/location_data_background</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- Episode Styles-->
    <style name="episodeLabel">
        <item name="android:background">@drawable/episode_label_background</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
