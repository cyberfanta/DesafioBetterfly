        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!-- Toolbar -->
    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <!-- Makes the toolbar text whatever color you want for both light/dark-->
        <item name="titleTextColor">@color/soft_black_37</item>
<!--        <item name="android:shadowColor">@color/cream_dark_2</item>-->
<!--        <item name="android:shadowDx">0</item>-->
<!--        <item name="android:shadowDy">0</item>-->
<!--        <item name="android:shadowRadius">3</item>-->
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="ToolbarStyle.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <!-- For toolbar menu -->
        <item name="android:tint">@color/black</item>
    </style>
    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <!-- For the hamburger menu, back button, etc -->
        <item name="tint">@color/black</item>
    </style>
    <!--Menu-->
    <style name="myCustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/soft_black_37</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>